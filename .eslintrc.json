{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "simple-import-sort"],
    "rules": {
        "react/prop-types": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "prefer-const": "error",
        "sort-imports": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}
